<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ActivitesFragment.Profile.Setting.NoInternetA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_no_job"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_offline_wifi" />

        <TextView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="@string/no_network_connection_"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            android:singleLine="true"
            />

        <TextView
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="@string/no_internet_connection_description"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/tvOpenSetting"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/ractengle_gray_on_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="@string/open_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            android:singleLine="true"
            />


    </LinearLayout>

</RelativeLayout>